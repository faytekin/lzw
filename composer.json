{
    "name": "faytekin/lzw",
    "description": "Compression library for Lempel–Ziv–Welch (LZW) for PHP",
    "license": "MIT",
    "homepage": "https://github.com/faytekin/lzw",
    "keywords": ["lzw", "compression", "LZW PHP"],
    "authors": [
        {
            "name": "Fatih Aytekin",
            "email": "fatih@aytekin.me",
            "homepage": "https://fatihaytekin.com/",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=7.2|^8.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "Faytekin\\LZW\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Faytekin\\LZW\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "archive": {
        "exclude": ["/tests"]
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-text --coverage-clover=coverage.clover"
    }
}
